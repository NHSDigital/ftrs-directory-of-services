            <stringProp name="filename"></stringProp>
            <stringProp name="cacheKey">false</stringProp>
            <stringProp name="script">// AWS SDK JARs must be placed in JMETER_HOME/lib directory
// Required JARs (download from Maven Central):
// - aws-java-sdk-secretsmanager-1.12.529.jar
// - aws-java-sdk-core-1.12.529.jar

import com.amazonaws.auth.DefaultAWSCredentialsProviderChain
import com.amazonaws.services.secretsmanager.AWSSecretsManagerClientBuilder
import com.amazonaws.services.secretsmanager.model.GetSecretValueRequest
import com.amazonaws.services.secretsmanager.model.GetSecretValueResult
import groovy.json.JsonSlurper

try {
    // Get the secret name from JMeter variable or use default
    String secretName = vars.get(&quot;AWS_SECRET_NAME&quot;)
    String region = vars.get(&quot;AWS_REGION&quot;) ?: &quot;eu-west-2&quot;
    String awsProfile = vars.get(&quot;AWS_PROFILE&quot;) ?: &quot;default&quot;

    log.info(&quot;Fetching secret: ${secretName} from region: ${region}&quot;)

    // Create AWS Secrets Manager client using default credentials chain
    // This will use: environment variables, system properties, AWS credentials file, IAM role
    def client = AWSSecretsManagerClientBuilder.standard()
        .withRegion(region)
        .withCredentials(new DefaultAWSCredentialsProviderChain())
        .build()

    // Create request to get secret value
    GetSecretValueRequest getSecretValueRequest = new GetSecretValueRequest()
        .withSecretId(secretName)

    // Retrieve the secret
    GetSecretValueResult getSecretValueResult = client.getSecretValue(getSecretValueRequest)
    String secretString = getSecretValueResult.getSecretString()

    log.info(&quot;Successfully retrieved secret&quot;)

    // Parse the JSON secret string
    def jsonSlurper = new JsonSlurper()
    def secretJson = jsonSlurper.parseText(secretString)

    // Process key-value pairs and set them as JMeter variables
    secretJson.each { key, value -&gt;
        vars.put(key as String, value as String)
        log.info(&quot;Set variable: ${key}&quot;)
    }

    log.info(&quot;Successfully processed ${secretJson.size()} key-value pairs from secret&quot;)

} catch (ClassNotFoundException e) {
    log.error(&quot;AWS SDK classes not found. Please ensure AWS SDK JARs are in JMETER_HOME/lib directory&quot;)
    log.error(&quot;Error: ${e.message}&quot;, e)
} catch (Exception e) {
    log.error(&quot;Error fetching or processing AWS secret: ${e.message}&quot;, e)
    e.printStackTrace()
    // Optionally fail the test or continue with default values
    // throw e
}
</stringProp>
